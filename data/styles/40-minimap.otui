MinimapWindow < MiniWindow
  height: 150

  Label
    text: ?
    text-align: center
    phantom: false
    !tooltip: tr('Press Ctrl+Shift+M para abrir o FullMap')
    anchors.top: lockButton.top
    anchors.right: lockButton.left
    margin-right: 3
    size: 14 14

  MiniWindowContents
    Minimap
      id: minimap
      anchors.fill: parent

  ResizeBorder
    anchors.right: parent.right
    anchors.top: parent.top
    anchors.bottom: parent.bottom
    enabled: true